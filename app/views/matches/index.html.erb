<%= render partial: 'shared/navbar' %>

<div class="container-fluid"> 
  <h4>Suas Partidas</h4>
    <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nome da Partida</th>
        <th scope="col">Dificuldade</th>
        <th scope="col">Você</th>
        <th scope="col">Adversário</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.name %></td>
          <td><%= match.difficulty %></td>
          <td><%= match.scoreP1 %></td>
          <td><%= match.scoreP2 %></td>
          <td><%= link_to 'Deletar',  match,  method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <td><%= 
            if match.scoreP1 == nil
              link_to 'Jogar',  match_home_index_path(match), class: 'btn btn-success' 
            end
          %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
   <%= link_to 'New Match', new_match_path, class: 'btn btn-info' %>
</div>